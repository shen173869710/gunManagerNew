<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/submit_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center|left"
        android:textColor="@color/black"
        android:textSize="@dimen/size_16"
        android:layout_marginLeft="10dp"
        />
    <com.auto.di.guan.manager.customview.XEditText
        android:id="@+id/submit_info"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_toRightOf="@+id/submit_title"
        android:background="@drawable/input_bg"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:hint="请输入"
        android:maxLines="1"
        android:padding="15dp"
        android:singleLine="true"
        android:text=""
        android:maxLength="50"
        android:textCursorDrawable="@drawable/cursor_color"
        app:x_disableClear="true"
        app:x_hidePwdDrawable="@mipmap/edittext_hide"
        app:x_showPwdDrawable="@mipmap/edittext_show"
        android:layout_centerVertical="true"
        />
</RelativeLayout>